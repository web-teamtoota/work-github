<h2>新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :名前 %>
    （姓）<%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"令和"%>
  </div>
  <div class="field">
    （名）<%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"道子"%>
  </div>
    <div class="field">
    <%= f.label :フリガナ %><br />
      （セイ）<%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"レイワ"%>
    </div>
 <div class="field">
    <%= f.label :フリガナ %><br />
      （メイ）<%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"ミチコ"%>
    </div>
  <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"sample@example.com"%>
    </div>
  <div class="field">
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code, autofocus: true, id:"inputName", placeholder:"0000000"%>
    </div>
   
      <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address, autofocus: true, id:"inputName", placeholder:"東京都渋谷区代々木神園町0-0"%>
    </div>
  </div>
  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
      <%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"0000000000"%>
    </div>
  </div>

  <div class="field">
    <%= f.label :パスワード（6文字以上） %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
</div>

<h2>既に登録済みの方</h2>
<%= link_to "こちら", new_customer_session_path %>からログインしてください。
</div>