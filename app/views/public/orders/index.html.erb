  <div class="mx-auto" style="width: 1000px">
     <div class="container">
       <span class="text-light bg-secondary px-3">注文履歴一覧
       </span>
     </div>
  </div>


<div class="container">
  <table class="order-table table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.to_s(:datetime) %></td>
          <td>
            〒<%= order.postal_code %><br/>
            <%= order.address %><br/>
            <%= order.name %></br>
            <%#= item.order.name %></br>

          </td>

          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= "#{order.total_payment.to_s(:delimited)}" %>円</td>
          <td><%= order.status %></td>
          <%= form_with model: @order, url: orders_path, method: :post do |f| %>



          <td><%= link_to '表示する︎?', orders_path(order),class:"btn btn-primary" %></td>

          <td><%= f.submit "表示する", class:"btn btn-primary" %></td>
              <% end %>
        </tr>
      </tbody>
    <% end %>
  </table>
    <%= paginate @orders %>
</div>
