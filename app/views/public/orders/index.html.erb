<div class="container">
    <h3>注文履歴一覧</h3>
       <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
                        <th>注文日</th>
                        <th>注文商品</th>
                        <th>支払金額</th>
                        <th>ステータス</th>
                        <th>注文詳細</th>
                        <th colspan="3"></th>
                    </tr>
      </thead>
                          <% @orders.each do |order| %>
              <tr>
                  <td><%= order.created_at %></td>
                  <td><%= order.name %></td>
                  <td><%= order.total_payment %></td>
                  <td><%= @order.status %></td>
                   <td><%= link_to order.created_at, orders_path %></td>

       </tr>
              <% end %>
              <%= paginate @orders %>


    </table>
        </div>

</div>


