<div>注文情報入力</div>
<div class="container">
  <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
      <h3><%= f.label :payment, "支払方法" %></h3>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :クレジットカード, Order.payment_methods_i18n[:credit_card] %>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :銀行振込, Order.payment_methods_i18n[:transfer]%>
    <div class="delivery-address-select">
      <h3><%= f.label :city, "お届け先" %></h3>
      <%= f.radio_button :city_option, 0, checked: "checked" %>
      <%= f.label :city, "ご自身の住所" %>
      <br>
      <%= @customer.postal_code.to_s.insert(3, "-") %><br/>
      <%= @customer.address %><br/>
      <%= @customer.last_name %><%= @customer.first_name %>
      <br>
      <%#= f.radio_button :city_option, 1 %>
      <%#= f.label :city, "登録済住所から選択" %>
      <!--br-->
      <%#= f.collection_select :id, @ship_cities, :id, :order_ship,{prompt: "選択してください"},class: "form-control" %>
      <br>
      <%= radio_button_tag(:selected_address, :radio3) %>
      <%= label_tag(:selected_address, "新しいお届け先") %>
                            <div class="field">
                              <label class="postal-code-label">郵便番号(ハイフンなし)</label>
                              <%#= f.text_field :postal_code, autofocus: true, class:""%>
                              <%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"0000000000"%>

                            </div>
                            <div class="field">
                              <label class="address-label">住所</label>
                              <%#= f.text_field :address, autofocus: true, class:"", size:"60*60"%>
                              <%= f.text_field :address, autofocus: true, id:"inputName", placeholder:"東京都渋谷区代々木神園町０-０"%>
                            </div>
                             <div class="field">
                            <label class="address-label">宛名</label>
                             <%#= f.text_field :name, autofocus: true, class:"", size:"30*30" %>
                             <%= f.text_field :full_name, autofocus: true, id:"inputName", placeholder:"令和道子"%>


                            </div>
                            <br>
                            <div class="text-center">
                              <%= f.submit "確認画面へ進む", class:"btn btn-lg btn-primary" %>
                            </div>
 　　 </div>
                            <% end %>
  </div>



