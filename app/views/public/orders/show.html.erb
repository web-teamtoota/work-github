    <div class="col-xs-3">
        <table class="table order-show-table">
          <tbody>
            <tr>
                <td class="text-left">商品合計</td>
                <td><%= (@order.total_payment - @order.postage).to_s(:delimited) %></td>
            </tr>
            
            <tr>
              <td class="text-left">配送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <td class="text-left">ご請求額</td>
              <td><%= "#{@order.total_payment.to_s(:delimited)}"%></td>
