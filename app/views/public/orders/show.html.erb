    <div class="col-6 ">
      <div class="text-left">
            <th>注文内容</th>

            <!--<div class=".container-md">-->
              <!--<div class="row-md">-->
              <table class="col-lg table-bordered">
            <thead class="bg-light">
            <tr>
              <td class="text-left">商品</td>
              <td class="text-left">単価（税込）</td>
              <td class="text-left">個数</td>
              <td class="text-left">小計</td>
            </tr>
    <% @order_details.each do |order_detail| %>
      <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.price * 1.1).floor.to_s(:delimited) %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= (order_detail.price * order_detail.quantity * 1.1).floor.to_s(:delimited) %></td>
      </tbody>
            </tr>

          <!--</thead>-->
              <% end %>
          </thead>

          </table>　
          </div>
                </div>
