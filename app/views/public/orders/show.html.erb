  <div class="mx-auto" style="width: 1000px">
     <div class="container">
       <span class="text-light bg-secondary px-3">注文履歴詳細
       </span>
     </div>
  </div>




<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <b>注文情報</b>
        <table class="table order-show-table">
          <tbody>
            <tr>
                <td class="active">注文日</td>
                <td><%= @order.created_at.to_s(:datetime_jp) %></td>
            <tr>
                <td class="active">配送先</td>
                <td>
                    〒<%= @order.postal_code %></br>
                    <%= @order.address %></br>
                    <%= @order.name %>
                </td>
                            </tr>

            </tr>
            <tr>
                <td class="active">支払方法</td>
                <td><%= @order.payment_method %></td>
            </tr>
            <tr>
                <td class="active">ステータス</td>
                <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
    </div>
    </div>
    
    <div class="col-xs-3">
      <b>請求情報</b>
        <table class="table order-show-table">
          <tbody>
            <tr>
                <td class="active">商品合計</td>
                <td><%= (@order.total_payment - @order.postage).to_s(:delimited) %></td>
            </tr>
            <tr>
              <td class="active">配送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <td class="active"><b>ご請求額</b></td>
              <td><%= "#{@order.total_payment.to_s(:delimited)}"%></td>
                  <!--td><%#= (@order.total_payment + @order.total_payment).to_s(:delimited, delimiter: ',') %></td-->

            </tr>
          </tbody>
        </table>
    </div>
 

  <div class="col-xs-8">
    <b>注文内容</b>
    <table class="table order-show-table">
      <thead>
        <tr>
          <th class="active col-xs-6">商品</th>
          <th class="active">単価（税込）</th>
          <th class="active">個数</th>
          <th class="active">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= (order_detail.price * 1.1).floor.to_s(:delimited) %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= (order_detail.price * order_detail.quantity * 1.1).floor.to_s(:delimited) %></td>
                <!--td><%#= (@order.total_payment + @order.total_payment).to_s(:delimited, delimiter: ',') %></td-->
                            <!--td>¥<%#= "{@order.total_payment.to_s(:delimited)}"%></td-->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

 </div>

