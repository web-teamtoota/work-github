<div class="container">
  <div class="row align-items-center" style="height:50px">
    <div class="col">
      <div>
        <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
        <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </div>
    </div>
  </div>
</div
<div class="mx-auto" style="width: 400px">
  <div><%= @item.name %></div>
  <div><%= @item.introduction %></div>
  <div><h3><%= @item.price.to_s(:dalimited) %>円</h3><h4>(税込)</h4></div>
   <div><%= @item.with_tax_price %></div>

  </br>
  <div class="mx-auto" style="width: 200px">
    <div class="action">
      <%= form_with model: @cart_item do |f| %>
      <div class="form-group">
      <%= f.hidden_field :item_id, value: @item.id %>
      <%= f.select :amount, *[1..10] %>
      <%#= f.select :amount, [['いち',1], ['に',2], ['さん',3]] %>
      <%#= f.hidden_field :item_id, :value => @item.id %>
      <%= f.submit "カートに入れる",class: "btn btn-success" %>
      <!--<%#= f.select :select, {'1': 1, '2': 2}, { include_blank: '個数選択'}, { class: 'form-control' , required: true } %>-->
      </div>
      <% end %>
    </div>
  </div>

