
<h3>商品新規登録</h3>
<%= form_with model: @item, url: admin_items_path do |f| %>
<div class="inputImage">商品画像</label>
<%= f.file_field :profile_image, placeholder: "商品画像", accept: "pimage/*" %>
<div class="field">
  <%= f.label :商品名 %>
  <%= f.email_field :商品名, autofocus: true, id:"inputName", placeholder:"商品名"%>
  </div>
  <div class="field">
    <%= f.label :商品説明 %>
    <textarea placeholder="ここに説明文を記述します" cols="30" rows="5" ></textarea>
    </div>
    <div class="field">
      <%= f.label :ジャンル %>
      <%= f.select :faculty, [["ケーキ", "ケーキ"], ["プリン", "プリン"], ["焼き菓子", "焼き菓子"]], include_blank: "選択して下さい" %>
      <%= f.submit '▽'%>
      </div>
      <div class="field">
        <%= f.label :税抜価格 %>
        <%= f.email_field :税抜価格, autofocus: true, id:"inputName", placeholder: "1000" %>円
        </div>
        <label>
          <%= f.label :販売ステータス %>
          <%= f.radio_button :sale, "販売中" %> 販売中 </label>
          <label><%= f.radio_button :sale, "販売停止中" %> 販売停止中</label>
          <div class="actions">
            <%= f.submit "新規登録" %>
            </div>
            <% end %>