<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>
<div>
  <%= image_tag @list.get_image %>
  <p>ショップ名：<%= @list.shop_name %></p>
  <p>説明：<%= @list.caption %></p>
  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p>ユーザーネーム：<%= @list.user.name %></p>
  <p>投稿日：<%= @list.created_at.strftime('%Y/%m/%d') %></p>
  <% if @list.user == current_user %>
    <%= link_to "削除", list_path(@list), method: :delete %>
  <% end %>
</div>
<!-- ユーザーの詳細 -->
<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
<!-- ユーザーの投稿一覧 -->
<%= render 'lists/list', lists: @lists %>