<div class="mx-auto" style="width: 400px">
  <h3>商品新規登録</h3>
  <%= link_to 'TOPページ', root_path %>
   <%= form_with model: @item, url:admin_items_path(@item.id) do |f| %>
  <div class="inputImage">商品画像
    <%= f.file_field :profile_image, placeholder: "商品画像", accept: "pimage/*" %>
    <div class="field">
      <%= f.label :商品名 %>
      <%= f.text_field :id, autofocus: true, id:"inputName", placeholder:"商品名"%>
    </div>
    <div class="field">
      <%= f.label :商品説明 %>
      <textarea placeholder="ここに説明文を記述します" cols="30" rows="5" ></textarea>
    </div>
    <div class="field">
      <%= f.label :ジャンル %>
      <%= f.select :genre_id, [["ケーキ", "ケーキ"], ["焼き菓子", "焼き菓子"], ["プリン", "プリン"], ["キャンディ", "キャンディ"]], include_blank: "選択して下さい" %>
    </div>
    <div class="field">
      <%= f.label :税抜価格 %>
      <%= f.text_field :price, autofocus: true, id:"inputName", placeholder: "1000" %>円
    </div>
    <label>
      <%= f.label :販売ステータス %>
      <%= f.radio_button :is_active, true %> 販売中
    </label>
    <label><%= f.radio_button :is_active, false %> 販売停止中</label>
    <div class="actions">
      <%= f.submit "新規登録",class: "btn btn-success" %>
    </div>
     <% end %>
  </div>
</div>