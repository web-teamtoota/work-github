<div class="container">
    <h3>注文履歴一覧</h3>
       <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
                        <th>購入日時</th>
                        <th>購入者</th>
                        <th>注文個数</th>
                        <th>注文ステータス</th>

                        <th colspan="3"></th>
                    </tr>
      </thead>
                          <% @orders.each do |order| %>
                           <div class="col-md-6">
              <tr>
                <td><%= link_to order.updated_at.strftime("%Y/%m/%d %H:%M:%S"), orders_path %></td>
                  <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
                  <td>
                    <% sum =0 %>
                    <% order.order_details.each do |order_detail|%>
                     <% sum += order_detail.quantity %>
                     <% end %>
                     <%= sum %>
                  </td>
                  <td><%= order.status %></td>
             </tr>
                           </div>
              <% end %>

    </table>
        </div>
</div>

</div>
  <div class="mx-auto" style="width: 400px">
 <%= paginate @orders %>
 </div>


