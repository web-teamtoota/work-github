<div class="container">
    <h3>注文履歴一覧</h3>
       <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
                        <th>購入日時</th>
                        <th>購入者</th>
                        <th>注文個数</th>
                        <th>注文ステータス</th>
                        <th colspan="3"></th>
                    </tr>
      </thead>
                          <% @items.each do |item| %>
                           <div class="col-md-6">
              <tr>
                  <td><%= item.created_at %></td>
                  <td><%= item.name %></td>
                  <td><%= item %></td>
                  <!--td><%= item.delete %></td-->
            　</tr>
            　</div>
              <% end %>
              <%= paginate @items %>
    </table>
        </div>
</div>

</div>
