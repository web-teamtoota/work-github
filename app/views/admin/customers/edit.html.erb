<div class="mx-auto" style="width: 1200px">
  <div class="container">
    <strong class="p-3 mb-2 bg-light text-dark">
      <%= @customer.full_name %>さんの会員情報編集
    </strong>
  </div>
</div>
<div class="container">
</div>
<%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>
</br>
<div class="field">
    　　　　<%= f.label :会員ID %>
  　　　　　　　<%= @customer.id %>
</div>
<div class="field">
      　　　　<%= f.label :氏名 %>
      　　　　　　　　<%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"山田"%><%= f.label :" " %>
    　　<%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"花子"%>
</div>
<div class="field">
    　　　　<%= f.label :フリガナ %>
        　　　　　　<%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"ヤマダ"%><%= f.label :" " %>
    　　<%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"ハナコ"%>
</div>
<div class="field">
    　　　　<%= f.label :郵便番号 %>
      　　  　　 　<%= f.text_field :postal_code, autofocus: true, id:"inputName", placeholder:"1500041"%>
</div>
<div class="field">
        　　　　<%= f.label :住所 %>
        　　　   　　　  　<%= f.text_field :address, autofocus: true, id:"inputName", placeholder:"東京都渋谷区神南１丁目１９-１１ パークウェースクエア２４階"%>
</div>
<div class="field">
        　　　　<%= f.label :電話番号 %>
        　　   　　　<%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"0368694700"%>
</div>
<div class="field">
        　　　　<%= f.label :メールアドレス %>
        　　<%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"hoge@example.com"%>
</div>
<tr>
<div class="field">
      　　　　<td><%= f.label :会員ステータス %>
     </td>
   <td>
  　　　<%= f.radio_button :is_deleted, true %>有効
     　<%= f.radio_button :is_deleted, false %>退会</td>
     　</br>
  　　　　　　　　　　　　　　<%= f.submit '変更を保存',class: "btn btn-success"%>
  <% end %>
</tr>
</div>