  <div class="container">
       <%= form_with model: @customer, url: 'admin_customers_path', method: :get do |f| %>
<% end %>
<h4>
  <%= @customer.full_name %>さんの会員詳細
</h4>
    </div>
    <!--</div>-->
    <div class="w-10">
<!--<div class="mx-auto" style="width: 200px">-->
  <table>
  　　　　　　　　　　　　　　<tr><th>　　　　 　    会員ID</th>　　　　<th><td><%= @customer.id %></td></th></tr>
　  　　　　　　　<tr><th>　　　 　　氏名</th>  　　　　　<th><td><%= @customer.full_name %></td></th></tr>
  　　　　　　　　　　　　　　<tr><th>　 　　　　フリガナ</th>　　　　<th><td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td></th></tr>
