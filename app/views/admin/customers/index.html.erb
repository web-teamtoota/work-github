<div class="container">
    <h3>商品一覧</h3>
       <div class="row">
    <table class='table table-hover table-inverse'>


            <thead>

                    <tr>
                        <th>商品ID</th>
                        <th>商品名</th>
                        <th>税抜価格</th>
                        <th>ステータス</th>
                        <th colspan="3"></th>
                    </tr>
             </thead>
              <% @items.each do |item| %>
              <tr>
                  <td><%= item.id %></td>
                  <td><%= item.name %></td>
                  <td><%= item.price.to_s(:delimited)  %></td>
                  <% if item.is_active ==true %>
                  <td>販売中</td>
              <% else %>
              <td>販売停止中</td>
              <% end %>
              </tr>

              <% end %>
    </table>
        </div>

</div>