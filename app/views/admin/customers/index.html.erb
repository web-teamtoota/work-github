<div class="container">
    <h3>会員一覧</h3>
       <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>

                    <tr>
                        <th>会員ID</th>
                        <th>氏名</th>
                        <th>メールアドレス</th>
                        <th>ステータス</th>
                        <th colspan="3"></th>
                    </tr>
      </thead>
                          <% @customers.each do |item| %>
              <tr>
                  <td><%= item.id %></td>
                  <td><%= link_to item.name, admin_item_path(item.id)%></td>
                  <td><%= item.price.to_s(:delimited)  %></td>
                  <% if item.is_active ==true %>
                  <td>販売中</td>
              <% else %>
              <td>販売停止中</td>
              <% end %>
              </tr>
              <% end %>
              <%= paginate @customers %>

          
    </table>
        </div>

</div>