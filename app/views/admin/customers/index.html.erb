<div class="container">
    <h3>会員一覧</h3>
       <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
                        <th>会員ID</th>
                        <th>氏名</th>
                        <th>メールアドレス</th>
                        <th>ステータス</th>
                        <th colspan="3"></th>
                    </tr>
      </thead>
                          <% @customers.each do |customer| %>
              <tr>
                  <td><%= customer.id %></td>
                  <td><%= link_to customer.full_name, admin_customer_path(customer.id)%></td>
                  <td><%= customer.email %></td>
                  <!--td><%= customer.is_deleted %></td-->
            　</tr>
              <% end %>
              <%= paginate @customers %>
    </table>
        </div>
</div>

