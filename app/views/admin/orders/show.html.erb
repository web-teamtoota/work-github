<div class="container">
<h3>注文履歴詳細</h3>
<div class="row">
  <div class="col-xs-6">

      <div>
        <p>
          <strong class="col-xs-2">購入者</strong>
          <%= link_to admin_customer_path(@order) do %>
            <%= @order.customer.last_name %><%= @order.customer.first_name %>
          <% end %>
        </p>
      </div>
      <br>
      <div>
          <p>

          <strong class="col-xs-2">配送先</strong>
          〒<%= (@order.customer.postal_code).to_s.insert(3, "-") %>
          <%= @order.customer.address %></br>
          <%= @order.customer.last_name %><%= @order.customer.first_name %>
          </p>
      </div>
      <br>
      <div>
          <p>
            <strong class="col-xs-2">支払い方法</strong>
            <%= @order.payment_method %>
          </p>
      </div>
      <br>
      <div>
          <p>
            <strong class="col-xs-4">注文ステータス</strong>
            <%= form_with model:@order, url: admin_path, local: true do |f| %>
              <%= f.select :status, ["入金待ち", "入金確認","製作中","発送準備中","発送済み"] %>
              <%= f.submit "更新", class: 'btn btn-primary' %>
            <% end %>
          </p>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-8">
    <table class='order-show-table table'>
      <thead>
        <tr>
          <th class="active">商品名</th>
          <th class="active">単価（税込）</th>
          <th class="active">数量</th>
          <th class="active">小計</th>
          <th class="active">製作ステータス</th>
        <tr>

      <% sum = 0 %>

      </thead>
       <tbody>
              <% @order.order_details.each do |order_detail| %>

        <tr>
          <td class="col-xs-4"><%= order_detail.item.name%></td>
          <td class="col-xs-2">¥<%= (order_detail.price*1.1).floor.to_s(:delimited) %></td>
          <td><%= order_detail.quantity %></td>
          <td class="col-xs-2">¥<%= ((order_detail.price * order_detail.quantity*1.1).floor).to_s(:delimited) %></td>
          <% sum += (order_detail.price * order_detail.quantity*1.1) %>

          <td>

            <%= form_with model:order_detail, url: admin_order_detail_path(order_detail.id), local: true do |f| %>
              <%= f.select :make_status, ["製作不可", "製作待ち", "製作中", "製作完了"] %>
              <%= f.submit "更新", class: 'btn btn-primary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
            </tbody>
    </table>
  </div>
  <div class="col-xs-4">
    <div>
      <p>
        <strong class="col-xs-3">商品合計</strong>
        <!--td><%#= (@order.total_payment -= @order.postage).to_s(:delimited) %>円</td-->
               <%#= (@order.total_payment += @order.postage).to_s(:delimited) %>
               <%= sum.floor.to_s(:delimited) %>円
      </p>
    </div>
    <br>

    <div>
      <p>
        <strong class="col-xs-2">送料</strong>
        <%= @order.postage %>円
      </p>
    </div>
    <br>

    <div>
      <p>
        <strong class="col-xs-4">請求金額合計</strong>
        <%= (sum +@order.postage).floor.to_s(:delimited) %>円


      </p>
    </div>
    <br>
  </div>
</div>
</div>
